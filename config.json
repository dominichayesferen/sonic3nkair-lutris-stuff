{

	// Enter the path to the game ROM here if it can't be found automatically
	"RomPath": "",

	// Default window size
	"WindowSize": "1200 x 672",

	// Audio output sample rate, valid values: 11025, 22050, 44100, 48000
	"AudioSampleRate": "48000",
	
	// Allow for dumping of a game simulation recording by pressing F2
	"GameRecording": "1",

	// Mapping of input devices to game controls
	"InputDevices":
	{
		// Keyboard key mapping 1
		"Keyboard1":
		{
			"Up":    [ "Up" ],
			"Down":  [ "Down" ],
			"Left":  [ "Left" ],
			"Right": [ "Right" ],
			"A":     [ "A" ],
			"B":     [ "S" ],
			"X":     [ "D", "Q" ],
			"Y":     [ "W" ],
			"Start": [ "Enter" ],
			"Back":  [ "Space" ]
		},

		// Keyboard key mapping 2
		//	Fill in your own key mapping if you need the keyboard for the second player
		"Keyboard2":
		{
			"Up":    [ ],
			"Down":  [ ],
			"Left":  [ ],
			"Right": [ ],
			"A":     [ ],
			"B":     [ ],
			"X":     [ ],
			"Y":     [ ],
			"Start": [ ],
			"Back":  [ ]
		},

		// XBox Controller and compatible
		"XBoxController":
		{
			"DeviceNames":
			[
				"Controller (XBOX 360 for Windows)",
				"*"						// Mark this as a default in case no other controller definition matches
			],

			"Up":    [ "Axis2", "Pov0" ],
			"Down":  [ "Axis3", "Pov2" ],
			"Left":  [ "Axis0", "Pov3" ],
			"Right": [ "Axis1", "Pov1" ],
			"A":     [ "Button0" ],
			"B":     [ "Button1" ],
			"X":     [ "Button2" ],
			"Y":     [ "Button3" ],
			"Start": [ "Button7" ],
			"Back":  [ "Button6" ]
		},

		// Other controllers like some Logitech controllers; these use a different numbering of buttons
		"LogitechController":
		{
			"DeviceNames":
			[
				"Logitech Dual Action"
			],

			"Up":    [ "Axis2", "Pov0" ],
			"Down":  [ "Axis3", "Pov2" ],
			"Left":  [ "Axis0", "Pov3" ],
			"Right": [ "Axis1", "Pov1" ],
			"A":     [ "Button1" ],
			"B":     [ "Button2" ],
			"X":     [ "Button0" ],
			"Y":     [ "Button3" ],
			"Start": [ "Button9" ],
			"Back":  [ "Button8" ]
		},

		// If none of the controller definitions above fit for you, you can define your own one here
		"CustomController":
		{
			"DeviceNames":
			[
				""	// Add your device's exact name (as shown in Windows control panel's game controller overview)
			],

			"Up":    [ "Axis2", "Pov0" ],
			"Down":  [ "Axis3", "Pov2" ],
			"Left":  [ "Axis0", "Pov3" ],
			"Right": [ "Axis1", "Pov1" ],
			"A":     [ "Button0" ],
			"B":     [ "Button1" ],
			"X":     [ "Button2" ],
			"Y":     [ "Button3" ],
			"Start": [ "Button7" ],
			"Back":  [ "Button6" ]
		}
	}

